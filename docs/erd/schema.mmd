%% ERD - TagDo (Tag, Todo)
%% Mermaid 문법 | GitHub/GitLab/mermaid.live에서 렌더링

erDiagram
    Tag ||--o{ Todo : "has many"

    Tag {
        int id PK "고유 번호"
        string name "태그 이름"
        int colorValue "색상(Color.value)"
    }

    Todo {
        int no PK "고유 번호 (밀리초 타임스탬프)"
        string content "할 일 내용"
        int tag FK "Tag.id"
        bool isCheck "완료 여부"
        datetime createdAt "생성 일시"
        datetime updatedAt "수정 일시"
        int sortOrder "정렬 순서"
        datetime dueDate "마감일시 (nullable)"
    }
